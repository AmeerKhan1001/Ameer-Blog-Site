---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Multi Component Page";
import PreactCounter from "../components/preact/PreactCounter";
import SvelteCounter from "../components/svelte/SvelteCounter.svelte";
import ReactCounter from "../components/react/ReactCounter";
import AnotherReactCounter from "../components/react/ReactCounter2";
import AstroCounter from "../components/AstroCounter.astro";

---

<BaseLayout pageTitle={pageTitle}>
    <!-- client:load - Load and hydrate the component JavaScript immediately on page load --> 
    <PreactCounter title="Preact" client:load/>
    <SvelteCounter title="Svelte" client:load/>
    <ReactCounter title="React" client:load/>
    <AstroCounter title="Astro" />
    <!-- client:visible - Load and hydrate the component, once it is about to visible in user's viewport --> 
    <p class="h-screen"></p>
    <p class="h-screen"></p>
    <AnotherReactCounter client:visible/>
</BaseLayout>
